<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>


<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= @book.title %></h5>
          <p class="card-text"><%= simple_format @book.body %></p>
          <p class="card-text">
            <small class="text-muted">更新日：<%= @book.updated_at.strftime("%Y-%m-%d") %></small>
          </p>
          <% if @book.user == current_user %>
            <%= link_to '編集', edit_book_path(@book), class: "btn btn-success" %>
            <%= link_to '削除', book_path(@book), method: :delete, class: "btn btn-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>