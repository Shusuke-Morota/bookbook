<h1>Books#new</h1>
<p>Find me in app/views/books/new.html.erb</p>

<% if @book.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading"><%= pluralize(@book.errors.count, "error") %></h4>
    <p><%= pluralize(@book.errors.count, "error") %> prohibited this object from being saved: not successfully</p>
    <hr>
    <p class="mb-0">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </p>
  </div>
<% end %>

<div class="container mt-5">
	<div class="row">
		<div class="col-6 mx-auto">
			<h2>新規投稿</h2>
			<%= form_for @book do |f| %>
			<div class="form-group">
				<label>本のタイトル</label>
				<%= f.text_field :title, class: "form-control" %>
			</div>

			<div class="form-group">
				<label>本の概要</label>
				<%= f.text_area :body, class: "form-control" %>
			</div>

			<div>
				<%= f.submit "投稿する", class: "btn btn-primary btn-block" %>
			</div>
			<% end %>
		</div>
	</div>
</div>
